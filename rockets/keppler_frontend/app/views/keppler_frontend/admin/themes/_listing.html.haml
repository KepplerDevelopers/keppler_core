- objects.each do |theme|
  %tr{ id: "row-#{theme.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if can?(KepplerFrontend::Theme).destroy_multiple? && !theme.name.eql?('Keppler Default')
        .checkbox
          %label{ for: "checkbox-#{theme.id}" }
            %input{ type:"checkbox", id: "checkbox-#{theme.id}", 'checklist-model' => 'check', 'checklist-value' => "#{theme.id}", '@click' => "listDelete(#{theme.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok
    %td.hidden-xs
      = link_to admin_frontend_theme_path(theme, search: @query), remote: true, class: 'show-row' do
        %span
          = theme.name
    %td.hidden-xs
      = link_to admin_frontend_theme_path(theme, search: @query), remote: true, class: 'show-row' do
        %span
          = simple_form_for [:admin, :frontend, theme] do |f|
            = f.input :active, as: :keppler_boolean, label: false
    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{theme.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{theme.id}" }
        - if can?(KepplerFrontend::Theme).index?
          %li
            = link_to admin_frontend_theme_path(theme), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if can?(KepplerFrontend::Theme).update?
          %li
            = link_to edit_admin_frontend_theme_path(theme), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        - if can?(KepplerFrontend::Theme).clone?
          %li
            = link_to admin_frontend_theme_clone_path(theme), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if can?(KepplerFrontend::Theme).destroy? && !theme.name.eql?('Keppler Default')
          %li
            = link_to admin_frontend_theme_path(theme), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    %td{:style => 'width: 5%;'}
      %a.drop{:href=>"#"}
        %i.icon-cursor-move
