.nested-fields.row
  .col-lg-4
    = f.input :name_field, label: t('capsule.attributes.name_field')
  .col-lg-4
    = f.input :format_field, label: t('capsule.attributes.format_field'), collection: f.object.formats, include_blank: false
  .col-lg-4
    = link_to_remove_association "<button class='btn btn-default btn-delete-field'><i class='icon-trash'></i></button>".html_safe, f
