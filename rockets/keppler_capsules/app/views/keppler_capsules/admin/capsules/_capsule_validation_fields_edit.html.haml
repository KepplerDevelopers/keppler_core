.nested-fields.row{id: "validation-#{f.object.id}"}
  .col-lg-4
    = f.input :name, label: t('capsule.attributes.validation'), collection: f.object.simple_validations.map { |v| [t("keppler_capsules.validations.#{v}"), v] }, include_blank: false, disabled: true
  .col-lg-3
    = f.input :field, label: t('capsule.attributes.capsule_field'), collection: @capsule.capsule_fields.map(&:name_field), include_blank: false, disabled: true
  - unless f.object.validation.blank?
    .col-lg-3
      = f.input :validation, label: t('capsule.attributes.value'), disabled: true
  .col-lg-2
    = link_to admin_capsules_capsule_destroy_validation_path(@capsule.id, f.object.id.to_i), class: "btn btn-default btn-delete-field" , remote: true, method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
      %i.icon-trash
