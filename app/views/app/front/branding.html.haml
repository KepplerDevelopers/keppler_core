          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/arismendy.png"}/
          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/evoca.png"}/
          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/riosur.png"}/
          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/barugrande.png"}/
          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/mujeres.png"}/
          -# .logo-cliente
          -#   %img.img-responsive.center-block{:src => "assets/img/clinton.png"}/

    %section#contactos.contactos-services
      .container
        .row
          .col-sm-6.col-xs-12.contactos-services-cont
            #wip-branding.wip.color-blanco
              %p.texto-4.sfpro
                Proyectos
                %br>/
                en desarrollo
                %br>/
                \#wip
              %p.texto-2_5.sfreg
                Sígue nuestra actividad y revisa en nuestro
                %a{:href => "https://www.instagram.com/grupobrieva/", :target => "_blank"} portafolio de instagram
                que proyecto estamos diseñando.
              %br/
              #aboutus-rrss.center-block.text-center
                %i.fa.fa-facebook{"aria-hidden" => "true"}
                %i.fa.fa-instagram{"aria-hidden" => "true"}
          / /.contactos-services-cont
          .col-sm-6.col-xs-12
            #formulario
              %span.sfreg.color-blanco.texto-2_5 PRIMERO ASESORATE
              %br/
              %p.sfreg.color-blanco.texto-4.mb-3 Nosotros te ayudamos, es gratis
              %form.formulario
                %input#nombre.campo{:name => "nombre", :placeholder => "Nombre y apellido", :required => "", :type => "text"}/
                %input#email.campo{:name => "email", :placeholder => "E-mail", :required => "", :type => "email"}/
                %input#telefono.campo{:name => "telefono", :placeholder => "Teléfono", :required => "", :type => "text"}/
                %input.btn.btn-violeta.pull-right.sfreg.texto-2{:type => "submit", :value => "Enviar"}/
              / /.formulario
          / /.col-sm-6 col-xs-12
        / /.row
