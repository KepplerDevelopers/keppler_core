!!!
%html{:lang => "es"}
  %head
    = render 'app/layouts/head'
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Grupo Brieva - Mercadeo Digital
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1, user-scalable=no", :name => "viewport"}/
    %meta{:content => "Grandes Creativos que sabemos Hacer Marcas Exitosas", :name => "description"}/
    %meta{:content => "slicegroup.xyz", :name => "author"}/
    %link{:href => "assets/img/favicon.ico", :rel => "shortcut icon"}/
    / CORE CSS
    -# %link{:href => "assets/css/bootstrap.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "assets/css/font-awesome.css", :rel => "stylesheet", :type => "text/css"}/
    -# %link{:href => "assets/css/slick.css", :rel => "stylesheet", :type => "text/css"}/
    -# %link{:href => "assets/css/slick-theme.css", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "assets/css/animate.css", :rel => "stylesheet", :type => "text/css"}/
    -# %link{:href => "assets/css/style.css", :rel => "stylesheet", :type => "text/css"}/
  %body
    = go_to_top

    %header#header-digital
      %section.container{:style => "position: relative; min-height: 50vh; height: auto;"}
        #cont-logotipo
          #logotipo
            / MARCA
            #marca
              = link_to root_path do
                %img{:src => "assets/img/logo_peq.png"}/
            / BURGER BUTTON
            #burger-button
              #bars
                %span.top
                %span.middle
                %span.bottom
        = navbar

        #header-service-texto.mt-14.mb-14
          %p.sfpro.color-rojo.texto-2_5
            Mercadeo Digital Profesional.
            %span.color-azul Innovación y creatividad
          %br/
          %p.sfreg.texto-5 Generamos posicionamiento y demanda de servicios y productos a través de estrategias de campañas de mercadeo digital.
          %p.sfpro.texto-3.color-verde Hacemos visible empresas en internet con herramientas poderosas para empresas
          %ul.nav.nav-pills.mt-3.mb-6
            - @marketings.each do |marketing|
              %li
                %a.link-azul-rojo{:href => "#marketing-1"}= marketing.name

        %a.mover1
          #cont-flecha-services
            %img#flecha.center-block{:src => "assets/img/flecha.png"}/


    - @marketings.each do |marketing|
      - if marketing.style_type.eql?('Parallax')
        %section#cta1.mercadeo{id: "marketing-#{marketing.id}" ,style: "background: url(#{marketing.banner}) center no-repeat; background-size: cover; background-attachment: fixed;"}
          .container
            .cta1-branding-cont.row
              - if marketing.headline_type.to_i == 0
                %p.sfreg.texto-1_7.color-verde.col-sm-12= marketing.headline_text
              - else
                %img.img-responsive{:alt => "Google AdWords", :src => "#{marketing.headline_image}", style: "margin: 0"}/
              %p.sfpro.texto-4.color-blanco.mt-2.col-sm-7=marketing.title
              %p.sfreg.texto-2_5.color-blanco.col-sm-7.col-xs-12
                = marketing.description

              .botones.mt-6.col-sm-12
                %a.btn.btn-azul.btn-lg{:href => "#contactos"} Solicitar Más Información
                = link_to success_path do
                  .btn.btn-transparente.btn-lg{:href => "success.html", :target => "_top"} Ver casos de éxito

      - if marketing.style_type.eql?('Bloque a la izquierda')
        %section.mercadeo2
          %img#cta1-2{:alt => "Mercadeo Digital", :src => "#{marketing.banner}"}/
          .container
            .row
              .col-lg-6
              .col-lg-6
                .mercadeo2-cont
                  %div
                    - if marketing.headline_type.to_i == 0
                      %p.sfreg.texto-1_7.color-verde.col-sm-12= marketing.headline_text
                    - else
                      %img.img-responsive{:alt => "Google AdWords", :src => "#{marketing.headline_image}", style: "margin: 0"}/

                    %p.sfpro.texto-4.color-azul.mt-2= marketing.title
                    %p#mercadeo2-texto.sfreg.texto-2_5.color-333.mt-2
                      = marketing.description
                    .botones.mt-3
                      %a.btn.btn-azul{:href => "#contactos"} Solicitar Más Información
                      = link_to success_path do
                        %a.btn.btn-transparente.color-verde{:href => "success.html", :target => "_top"} Ver casos de éxito

      - if marketing.style_type.eql?('Bloque a la derecha')
        %section.mercadeo2
          %div#cta1-2{style: "background: url(#{marketing.banner}) center no-repeat; background-size: cover; right: 0"}
          .container
            .row
              .col-lg-6
                .mercadeo2-cont
                  %div
                    - if marketing.headline_type.to_i == 0
                      %p.sfreg.texto-1_7.color-verde.col-sm-12= branding.headline_text.upcase
                    - else
                      %img.img-responsive{:alt => "Google AdWords", :src => "#{marketing.headline_image}"}/
                    %p.sfpro.texto-4.color-azul.mt-2= marketing.title
                    %p#mercadeo2-texto.sfreg.texto-2_5.color-333.mt-2
                      = marketing.description
                    .botones.mt-3
                      %a.btn.btn-azul{:href => "#contactos"} Solicitar Más Información
                      = link_to success_path do
                        %a.btn.btn-transparente.color-verde{:href => "success.html", :target => "_top"} Ver casos de éxito


    %section#cta4
      .container.mt-10.mb-10
        %p.sfreg.texto-5.color-amarillo.mb-2
          Hemos logrado alcanzar a más de
          %span.color-verde 50.000
          personas través de campañas de
          %span.color-azul Mercadeo Digital
        %p
        %a.link-rojo-azul{:href => "success.html", :target => "_top"} ¿Quieres tener más información?
      / /.container
    / /.cta-clientes
    = render "app/front/partials/last_proyects"

    %section#contactos.contactos-services
      .container
        .row
          .col-sm-6.col-xs-12.contactos-services-cont
            .wip.color-blanco
              %p.texto-4.sfpro
                Proyectos
                %br>/
                en desarrollo
                %br>/
                \#wip
              %p.texto-2_5.sfreg
                Sígue nuestra actividad y revisa en nuestro
                %a{:href => "https://www.instagram.com/grupobrieva/", :target => "_blank"} portafolio de instagram
                que proyecto estamos diseñando.
              %br/
              #aboutus-rrss.center-block.text-center
                %i.fa.fa-facebook{"aria-hidden" => "true"}
                %i.fa.fa-instagram{"aria-hidden" => "true"}

          = render "app/front/partials/contact"
          
    %footer
      .container
        .footer-cont
          %img{:alt => "...", :src => "assets/img/icono.png"}/
          %p
            Agencia de Publicidad Digital / Diseño Gráfico y Diseño de páginas web. Teléfono (5) 643 0188 - +57 301 324 5468 - contacto@grupobrieva
            %br/
            = succeed "\u{a0}\u{a0}\u{a0}\u{a0}" do
              %a{:href => "legal.html"} Cookies y Politica de privacidad
            = succeed "\u{a0}\u{a0}\u{a0}" do
              %a{:href => "http://www.grupobrieva.com/"} Diseñado por Grupo Brieva
            %a{:href => "http://slicegroup.xyz/"} Desarrollado por Slice group
        / /.footer-cont
      / /.container
    / FOOTER
    /
