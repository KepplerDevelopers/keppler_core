            .item-texto
              .cont
                %img{:alt => "Logo Cliente", :src => "assets/img/logo-baru.png", :style => "width: 13rem; height: auto;"}/
                %p
                %p.texto-1_7.color-blanco.sfreg
                  BARÚ OFF SHORE
                  %br>/
