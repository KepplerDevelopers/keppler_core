:javascript
  new Vue({
    el: '#briefing-formulario',
    data: {
      services: []
    },
    methods: {
      addService(service) {
        if (!this.services.includes(service)) {
          this.services.push(service)
        } else {
          this.services.shift(service)
        }
      }
    }
  })
