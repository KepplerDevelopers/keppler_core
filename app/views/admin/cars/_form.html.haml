= simple_form_for [:admin, @car] do |f|
  .container
    .row
      .col-lg-2
        = link_to admin_cars_path, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
          .arrow-back.btn.btn-default
            %i.fa.fa-angle-left
            = t('keppler.actions.back')

    .row
      .col-lg-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title= t("keppler.modules.#{action_name.underscore}")
            .box-tools.pull-right
              %a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
                %i.fa.fa-minus
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .col-xs-12
                    .upload-image
                      = f.label :photo
                      .files.form-group.trigger{ class: "#{'files-absolute' unless @car.photo.blank?}" }
                        #icon-file
                          +
                        = f.file_field :photo, class: 'photo_upload'
                      %center#image
                        = image_tag "#{@car.photo.blank? ? 'photo.png' : @car.photo}", class: "#{'hidden' if @car.photo.blank?} image_to_upload"
                  .col-xs-12
                    = f.input :name
                  .col-xs-12
                    = f.input :color
                  .col-xs-12
                    -# = f.input :selled
                    .checkbox
                      %label{ for: "checkbox-#{@car.id}" }
                        %span selled
                        %input{ type:"checkbox", id: "checkbox-#{@car.id}", 'checklist-model' => 'check', 'checklist-value' => "#{@car.id}", '@click' => "listDelete(#{@car.id})"}
                        %span.cr
                          %i.cr-icon.glyphicon.glyphicon-ok
                  .col-xs-12
                  .col-xs-12
                    .pull-right
                      = f.button :submit, t("keppler.actions.save"), name: '_save', class: "btn-primary"
                      = f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
