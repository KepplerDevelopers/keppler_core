- objects.each do |car|
  %tr{ id: "row-#{car.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if Pundit.policy(current_user, Car).destroy_multiple?
        .checkbox
          %label{ for: "checkbox-#{car.id}" }
            %input{ type:"checkbox", id: "checkbox-#{car.id}", 'checklist-model' => 'check', 'checklist-value' => "#{car.id}", '@click' => "listDelete(#{car.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok
    %td
      = link_to admin_car_path(car, search: @query), remote: true, class: 'show-row' do
        %span
          = image_tag car.photo
    %td.hidden-xs
      = link_to admin_car_path(car, search: @query), remote: true, class: 'show-row' do
        %span
          = car.name
    %td.hidden-xs
      = link_to admin_car_path(car, search: @query), remote: true, class: 'show-row' do
        %span
          = car.color
    %td.hidden-xs.hidden-sm
      = link_to admin_car_path(car, search: @query), remote: true, class: 'show-row' do
        %span
          = car.selled
    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{car.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{car.id}" }
        - if Pundit.policy(current_user, Car).show?
          %li
            = link_to admin_car_path(car), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if Pundit.policy(current_user, Car).update?
          %li
            = link_to edit_admin_car_path(car), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        - if Pundit.policy(current_user, Car).clone?
          %li
            = link_to admin_car_clone_path(car), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if Pundit.policy(current_user, Car).destroy?
          %li
            = link_to admin_car_path(car), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    %td{:style => 'width: 5%;'}
      %a.drop{:href=>"#"}
        %i.icon-cursor-move
