%tr{ id: "row-#{establishment.id}" }
	- if can? :destroy_multiple, Establishment
		%td.center.item-check
			= link_to '', admin_establishment_path(establishment), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{establishment.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{establishment.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{establishment.id}" }

	%td.center
		= link_to '', admin_establishment_path(establishment, search: @query), remote: true, class: 'show-row'
		%span
			= establishment.name
	%td.center
		= link_to '', admin_establishment_path(establishment, search: @query), remote: true, class: 'show-row'
		%span
			= establishment.city
	%td.center
		= link_to '', admin_establishment_path(establishment, search: @query), remote: true, class: 'show-row'
		%span
			= establishment.email
	- if can? :show, Establishment
		%td.center.btn-w5
			= link_to admin_establishment_path(establishment), class: 'btn-floating waves-effect btn-flat', title: 'Show' do
				= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Establishment
		%td.center.btn-w5
			= link_to edit_admin_establishment_path(establishment), class: 'btn-floating btn-flat tooltipped', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Establishment
		%td.center.btn-w5
			= link_to admin_establishment_clone_path(establishment), class: 'btn-floating waves-effect btn-flat', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Establishment
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_establishment_path(establishment), class: 'btn-floating btn-flat tooltipped', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
