:javascript
  $('.create-rocket').click(function () {
    swal({
      input: 'text',
      title: 'Choose a name',
      text: 'This will be your rocket\'s name',
      confirmButtonText: 'Create &rarr;',
      showCancelButton: true,
    }).then((result) => {
      if (result.value) {
        var rocket_name = result.value;
        swal({
          title: 'Are you sure?',
          html: `Your rocket will be named:<pre><code>keppler_${result.value.toLowerCase().split(' ').join('_')}</code></pre>`,
          confirmButtonText: 'Lovely!',
          showCancelButton: true,
        }).then((result) => {
          if (result.value) {
            swal({
              title: 'Great!',
              html: 'Please wait until your rocket is ready.',
              timer: 3000,
              onOpen: () => {
                swal.showLoading()
              },
            }).then((result) => {
              $('.spinner').fadeIn()
              $('.create_rocket_form')
                .attr('action', `/admin/rockets/create/${rocket_name}`)
                .submit()
              // if (result.dismiss === swal.DismissReason.timer) {
              // }
            })
          }
        })
      }
    })
  })
