.listing-show-header
	.actions
		- if can? :update, TermsAndCondition
			= link_to edit_admin_terms_and_condition_path(@terms_and_condition), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%table.bordered
			%tbody
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
					%td
						.display-value.fs-body-1.tc-black-2= @terms_and_condition.id
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.content")
					%td
						.display-value.fs-body-1.tc-black-2= @terms_and_condition.content.blank? ? '----------' : @terms_and_condition.content
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_terms_and_conditions_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
