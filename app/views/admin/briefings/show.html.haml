= title(t('keppler.titles.show', model: "Briefings"))
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Briefing
				= link_to admin_briefing_path(@briefing), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Briefing
				= link_to edit_admin_briefing_path(@briefing), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" =>t("keppler.actions.edit") do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to admin_briefings_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%center.color-title= @briefing.name.to_s.humanize
				%table.bordered
					%tbody
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.id.to_s.humanize
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.name")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.name.blank? ? '----------' : @briefing.name
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.email")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.email.blank? ? '----------' : @briefing.email
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.phone")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.phone.blank? ? '----------' : @briefing.phone
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.company")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.company.blank? ? '----------' : @briefing.company
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.services_type")
							%td
								.display-value.fs-body-1.tc-black-2
								- @briefing.services_type.split(',').each do |br|
									%li= br
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.other")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.other.blank? ? '----------' : @briefing.other
						%tr
							%th
								.display-label= t("activerecord.attributes.#{controller_name.singularize}.about")
							%td
								.display-value.fs-body-1.tc-black-2= @briefing.about.blank? ? '----------' : @briefing.about
