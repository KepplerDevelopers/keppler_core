%tr{ id: "row-#{briefing.id}" }
	- if can? :destroy_multiple, Briefing
		%td.center.item-check
			= link_to '', admin_briefing_path(briefing), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{briefing.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{briefing.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{briefing.id}" }

	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.name
	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.email
	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.phone
	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.company
	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.services_type
	%td.center
		= link_to '', admin_briefing_path(briefing, search: @query), remote: true, class: 'show-row'
		%span
			= briefing.other
	%td.center.btn-w5
		= link_to admin_briefing_path(briefing), class: 'btn-floating waves-effect btn-flat', title: 'Show' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Briefing
		%td.center.btn-w5
			= link_to edit_admin_briefing_path(briefing), class: 'btn-floating btn-flat tooltipped', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Briefing
		%td.center.btn-w5
			= link_to admin_briefing_clone_path(briefing), class: 'btn-floating waves-effect btn-flat', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Briefing
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_briefing_path(briefing), class: 'btn-floating btn-flat tooltipped', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
