.listing-show-header
	.actions
		- if can? :update, Script
			= link_to edit_admin_script_path(@script), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				-# -# = material_icon.md_24.create
	%h5
		-# -# = material_icon.md_24.insert_chart.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.script.name")
				.display-value= @script.name
			%li.list-row
				.display-label= t("activerecord.attributes.script.tracking_id")
				.display-value= @script.tracking_id
			%li.list-row
				.display-label= t("activerecord.attributes.script.url")
				.display-value
					= link_to @script.url, @script.url, target: "_blank"

			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_scripts_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
