%tr{ id: "row-#{marketing.id}" }
	- if can? :destroy_multiple, Marketing
		%td.center.item-check
			= link_to '', admin_marketing_path(marketing), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{marketing.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{marketing.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{marketing.id}" }

	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= image_tag marketing.banner, style: 'height: 50px'
	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= marketing.name
	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= marketing.headline_text
	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= marketing.headline_image
	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= marketing.headline_type
	%td.center
		= link_to '', admin_marketing_path(marketing, search: @query), remote: true, class: 'show-row'
		%span
			= marketing.style_type
	%td.center.btn-w5
		= link_to admin_marketing_path(marketing), class: 'btn-floating waves-effect btn-flat', title: 'Show' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Marketing
		%td.center.btn-w5
			= link_to edit_admin_marketing_path(marketing), class: 'btn-floating btn-flat tooltipped', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Marketing
		%td.center.btn-w5
			= link_to admin_marketing_clone_path(marketing), class: 'btn-floating waves-effect btn-flat', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Marketing
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_marketing_path(marketing), class: 'btn-floating btn-flat tooltipped', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
