.listing-show-header
	.actions
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%table.list.bordered
			%tr.list-row
				%th.display-label= t("activerecord.attributes.file")
				%td.display-value= @customize.file
			%tr.list-row
				= link_to t('keppler.actions.back_history'), admin_customizes_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
