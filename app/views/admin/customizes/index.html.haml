= title(t('keppler.titles.index', model: "Templates"))
= header_information do
	= "Templates"

.listing.col.l9.m12.s12
	- if can? :new, model
		= link_to new_admin_customize_path, class: "btn-floating btn-large waves-effect waves-light btn-new hide-on-small-only" do
			= material_icon.md_24.add
	= entries(@total, @objects)
	%table.bordered
		%tbody
			- if @objects.size.zero?
				%tr
					%td.center{colspan: "4"}
						%center
							= t('keppler.messages.not_found_records', model:  t("keppler.models.pluralize.customizes"))
			- else
				- @objects.each do |customize|
					= render 'listing', customize: customize
	= paginate @objects, window: 1

.listing-show.col.l3.m12.hide-on-small-and-down.hide-on-med-and-down
	= render "description"

- if can? :new, model
	= link_to new_admin_customize_path, class: "btn-index-add btn-floating btn-large waves-effect waves-light" do
		= material_icon.md_24.add.css_class("md-light")
