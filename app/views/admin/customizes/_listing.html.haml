%tr{ id: "row-#{customize.id}" }
	%td.item-check{style:"width: 5%"}
		- if can? :destroy_multiple, Customize and customize.file?
			= link_to "", admin_customize_path(customize), remote: true, class: "show-row"
			-# %input{ type:"checkbox", class: "filled-in", id: "checkbox-#{customize.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{customize.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			-# %label{ for: "checkbox-#{customize.id}" }

	%td{style:"width: 35%"}
		%span
			.pull-left
				= link_to admin_customize_path(customize), method: :delete do
					%i.material-icons.icon-delete delete
			= customize.name
	%td{style:"width: 15%"}
		%span
			- if customize.file?
				= render 'admin/customizes/switch_template', customize: customize
			- else
				= render 'admin/customizes/switch_default_template', customize: customize
