.col-lg-12
	.box.slice-box
		.box-header.with-border
			%h3.box-title
				Google Analytics Settings
			.box-tools.pull-right
				%a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button"}
					%i.fa.fa-minus
		.box-body.pure-input
			= f.simple_fields_for :google_analytics_setting do |f|
				= f.input :ga_account_id
				= f.input :ga_tracking_id
				.form-group.string.optional
					.pretty.p-default.p-thick.p-pulse
						%input{ type:"checkbox", id: 'setting_google_analytics_setting_attributes_ga_status', name: 'setting[google_analytics_setting_attributes][ga_status]', class: "filled-in", 'checklist-model'=>"check"}
						.state.p-danger-o
							%label.control-label.string.optional{ for: 'setting_google_analytics_setting_attributes_ga_status' } Ga Status
