  #sidebar-footer
    width: 100%
    padding: 10px
    position: relative
    bottom: 0px

    a, span
      color: #fff !important
      font-family: Patua One
  ::-webkit-scrollbar
    display: none

  .sidebar-menu.tree
    i
      color: #a0a0a0
      font-size: 16px
      padding-right: 10px
