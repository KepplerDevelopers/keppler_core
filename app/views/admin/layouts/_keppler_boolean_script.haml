:javascript
  $('.keppler-switch').click(function(event) {
    event.preventDefault()
    var input = $(this).find('input')
    var label = $(this).find('.inline-label')
    input
      .toggleClass('active')
      .attr('checked', input.hasClass('active'))
      .val(input.hasClass('active'))
    label
      .toggleClass('active')
      .text(label.hasClass('active'))
  })
