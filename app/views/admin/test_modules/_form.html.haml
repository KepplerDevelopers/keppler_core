.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_test_modules_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @test_module] do |f|
						.row
							.col.s12
								= f.input :photo, :as => :file_material, label: false, wrapper_html: { class: "file-field" }
							.col.s12
							.col.s12
								= f.input :name
							.col.s12
								= f.input :phone
							.col.s12
								= f.input :public, as: :checkbox_material
							.col.s12
								= f.input :age, input_html: {min: 0}
							.col.s12
								= f.input :weight
							.col.s12
								.form-actions.right
									= f.button :submit, t("keppler.actions.save"), name: '_save'
									= f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
