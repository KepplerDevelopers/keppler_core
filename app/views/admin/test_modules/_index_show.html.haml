.listing-show-header
	.actions
		- if can? :update, TestModule
			= link_to edit_admin_test_module_path(@test_module), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @test_module.name.to_s.humanize
		%center= image_tag @test_module.photo
		%table.bordered
			%tbody
				%tr
					%th.display-label= t("activerecord.attributes.id")
					%td.display-value.fs-body-1.tc-black-2= @test_module.id
				%tr
					%th.display-label= t("activerecord.attributes.name")
					%td.display-value.fs-body-1.tc-black-2= @test_module.name.blank? ? '----------' : @test_module.name
				%tr
					%th.display-label= t("activerecord.attributes.phone")
					%td.display-value.fs-body-1.tc-black-2= @test_module.phone.blank? ? '----------' : @test_module.phone
				%tr
					%th.display-label= t("activerecord.attributes.public")
					%td.display-value.fs-body-1.tc-black-2= @test_module.public.blank? ? '----------' : @test_module.public
				%tr
					%th.display-label= t("activerecord.attributes.age")
					%td.display-value.fs-body-1.tc-black-2= @test_module.age.blank? ? '----------' : @test_module.age
				%tr
					%th.display-label= t("activerecord.attributes.weight")
					%td.display-value.fs-body-1.tc-black-2= @test_module.weight.blank? ? '----------' : @test_module.weight
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_test_modules_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
