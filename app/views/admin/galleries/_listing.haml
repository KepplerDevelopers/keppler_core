- objects.each do |gallery|
  %tr{ id: "row-#{gallery.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if can?(Gallery).destroy_multiple?
        .checkbox
          %label{ for: "checkbox-#{gallery.id}" }
            %input{ type:"checkbox", id: "checkbox-#{gallery.id}", 'checklist-model' => 'check', 'checklist-value' => "#{gallery.id}", '@click' => "listDelete(#{gallery.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok
    %td.hidden-xs
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.avatar
    %td.hidden-xs
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.images
    %td.hidden-xs.hidden-sm
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.video
    %td.hidden-xs.hidden-sm
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.audio
    %td.hidden-xs.hidden-sm
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.pdf
    %td.hidden-xs.hidden-sm
      = link_to admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row' do
        %span
          = gallery.txt
    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{gallery.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{gallery.id}" }
        - if can?(Gallery).index?
          %li
            = link_to admin_gallery_path(gallery), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if can?(Gallery).update?
          %li
            = link_to edit_admin_gallery_path(gallery), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        - if can?(Gallery).clone?
          %li
            = link_to admin_gallery_clone_path(gallery), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if can?(Gallery).destroy?
          %li
            = link_to admin_gallery_path(gallery), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    %td{:style => 'width: 5%;'}
      %a.drop{:href=>'#'}
        %i.icon-cursor-move
