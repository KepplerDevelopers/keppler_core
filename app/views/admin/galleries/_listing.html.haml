%tr{ id: "row-#{gallery.id}" }
	- if can? :destroy_multiple, Gallery
		%td.center.item-check{ width: 60 }
			= link_to '', admin_gallery_path(gallery), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{gallery.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{gallery.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{gallery.id}" }

	%td.center
		= link_to '', admin_gallery_path(gallery, search: @query), remote: true, class: 'show-row'
		%span
			= gallery.name
	-# %td.center{ width: 60 }
	-# 	.action-btn.horizontal
	-# 		%a.btn-floating.btn-flat.right
	-# 			%i.material-icons.grey-text menu
	-# 		%ul.right.expanded-menu
	-# 			.icons.right
	%td.center{ width: 5}
		= link_to admin_gallery_photos_path(gallery), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.sidebar-menu.photos') do
			= material_icon.md_24.add.css_class('md-dark')
	- if can? :show, Gallery
		%td.center{ width: 5 }
			= link_to admin_gallery_path(gallery), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.show') do
				= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Gallery
		%td.center{ width: 5 }
			= link_to edit_admin_gallery_path(gallery), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.edit') do
				= material_icon.md_18.create.css_class('md-dark')
	-# - if can? :clone, Gallery
	-# 	%td.center{ width: 5 }
	-# 		= link_to admin_gallery_clone_path(gallery), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.clone') do
	-# 			= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Gallery
		%td.center{ width: 5, style: 'padding-right: 20px'}
			= link_to admin_gallery_path(gallery), class: 'btn-floating waves-effect btn-flat tooltipped', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
