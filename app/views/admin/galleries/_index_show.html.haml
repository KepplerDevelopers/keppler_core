.listing-show-header
	.actions
		- if can? :update, Gallery
			= link_to edit_admin_gallery_path(@gallery), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @gallery.name.to_s.humanize
		%table.bordered
			%tbody
				%tr
					%th.display-label= t("activerecord.attributes.id")
					%td.display-value.fs-body-1.tc-black-2= @gallery.id
				%tr
					%th.display-label= t("activerecord.attributes.name")
					%td.display-value.fs-body-1.tc-black-2= @gallery.name.blank? ? '----------' : @gallery.name
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_galleries_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
