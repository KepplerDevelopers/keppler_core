.listing-show-header
	.actions
		- if can? :update, Scaffold
			= link_to edit_admin_scaffold_path(@scaffold), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				-# = material_icon.md_24.create
	%h5
		-# = material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%center.color-title= @scaffold.name.to_s.humanize
		%table.bordered
			%tbody
				%tr
					%th.display-label= t("activerecord.attributes.#{controller_name.singularize}.id")
					%td.display-value.fs-body-1.tc-black-2= @scaffold.id
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.name")
					%td
						.display-value.fs-body-1.tc-black-2= @scaffold.name.blank? ? '----------' : @scaffold.name
				%tr
					%th
						.display-label= t("activerecord.attributes.#{controller_name.singularize}.fields")
					%td
						.display-value.fs-body-1.tc-black-2= @scaffold.fields.blank? ? '----------' : @scaffold.fields
		%table.bordered
			%tbody
				%td
					%center
						= link_to t('keppler.actions.back_history'), admin_scaffolds_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
