.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_users_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @user] do |f|
						.row
							.col.s12
								= f.input :name
							.col.s12
								= f.input :email
							.col.s12
								= f.input :role_ids, collection: @roles, label: 'Rol', include_blank: t("keppler.actions.select_rol"), input_html: { class: "input-field" }
							.col.s12
								= f.input :password
							.col.s12
								= f.input :password_confirmation
							.col.s12
								.form-actions.right
									= f.button :submit, t("keppler.actions.save"), name: "_save"
									= f.button :submit, t("keppler.actions.save_and_add_another"), name: "_add_other"
:javascript
	op1 = $('option').first()
	op1.attr('disabled', 'disabled')
