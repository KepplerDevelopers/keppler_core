%tr{ id: "row-#{script.id}" }
  - if can? :destroy_multiple, Script
    %td.item-check{style:"width: 10%"}
      = link_to "", admin_script_path(script), remote: true, class: "show-row"
      .pretty.p-default.p-thick.p-pulse
        %input{ type:"checkbox", class: "filled-in", id: "checkbox-#{script.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{script.id}", "ng-click"=>"selectByCheck(#{@objects.size})", "@click" => "listDelete(#{script.id})"}
        .state.p-danger-o
          %label{ for: "checkbox-#{script.id}" }
  - script.as_json(except: [:created_at, :updated_at]).each_with_index do |attribute, value|
    %td.hide-on-small-and-down
      = link_to "", admin_script_path(script, search: @query), remote: true, class: "show-row"
      %span= value
  %td{:style => "float: right;padding-right: 30px;"}
    %a.drop{:id => "menu-#{script.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
      %i.material-icons menu
    %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{script.id}"}
      - if can? :show, Script
        %li
          = link_to admin_script_path(script), class: 'new-menu', title: t('keppler.actions.show') do
            %i.material-icons remove_red_eye
            = t('keppler.actions.show')
      - if can? :update, Script
        %li
          = link_to admin_script_path(script), class: 'new-menu', title: t('keppler.actions.edit') do
            %i.material-icons create
            = t('keppler.actions.edit')
      - if can? :clone, Script
        %li
          = link_to admin_script_path(script), class: 'new-menu', title: t('keppler.actions.clone') do
            %i.material-icons content_copy
            = t('keppler.actions.clone')
      - if can? :delete, Script
        %li
          = link_to admin_script_path(script), class: 'new-menu', title: t('keppler.actions.delete') do
            %i.material-icons delete
            = t('keppler.actions.delete')
