= simple_form_for [:admin, @script] do |f|
  .container
    .row
			.col-lg-2
				.arrow-back.btn.btn-default
					= link_to admin_users_path, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
						%i.fa.fa-chevron-left
							Volver
						.clearfix
			.clearfix
    .row
      .col-xs-12
        .box.slice-box
          .box-header.with-border
            %h3.box-title Script

          / /.box-header
          .box-body
            %table.table.table-bordered
              %tbody
                .form-padding
                  .row
                    .col-xs-12
                      = f.input :name, required: true, autofocus: true

                    .col-xs-12
                      = f.input :script, required: true, autofocus: true
                  .row
                    .col-xs-12
                      = f.input :url, required: true, autofocus: true
                  .row
                    .col-xs-12
                      .pull-right
                        = f.button :submit, t("keppler.actions.save"), name: "_save", class: "btn-primary"
                        = f.button :submit, t("keppler.actions.save_and_add_another"), name: "_add_other"
