.listing-show-header
	.actions
		- if can? :update, MetaTag
			= link_to edit_admin_meta_tag_path(@meta_tag), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.trending_up.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%table.list.bordered
			%tr.list-row
				%th.display-label= t("activerecord.attributes.title")
				%td.display-value= @meta_tag.title
			%tr.list-row
				%th.display-label= t("activerecord.attributes.description")
				%td.display-value= @meta_tag.description
			%tr.list-row
				%th.display-label= t("activerecord.attributes.meta_tags")
				%td.display-value= @meta_tag.meta_tags
			%tr.list-row
				%th.display-label= t("activerecord.attributes.url")
				%td.display-value= @meta_tag.url

			%tr.list-row
				= link_to t('keppler.actions.back_history'), admin_meta_tags_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
