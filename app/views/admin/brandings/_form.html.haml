:scss
	.hidden {
		display: none;
	}

:javascript
	$('#branding_headline_type').click(function() {
		$('#branding_headline_text').val('')
		$('#branding_headline_image').val('')
		$('.branding_headline_text').toggleClass('hidden')
		$('.branding_headline_image').toggleClass('hidden')
	})
