.listing-show-header
	.actions
		- if can? :update, Banner
			= link_to edit_admin_banner_path(@banner), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.edit") do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("keppler.models.singularize.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%ul.list
			%li.list-row
				.display-label= t("activerecord.attributes.banner.cover")
				.display-value= @banner.cover
			%li.list-row
				.display-label= t("activerecord.attributes.banner.category")
				.display-value= @banner.category
			%li.list-row
				= link_to t('keppler.actions.back_history'), admin_banners_path

:javascript
	$('.tooltipped').tooltip({delay: 1});
