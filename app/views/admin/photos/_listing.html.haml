%tr{ id: "row-#{photo.id}" }
	- if can? :destroy_multiple, Photo
		%td.center.item-check{ width: 60 }
			= link_to '', admin_gallery_photo_path(@gallery_photo,photo), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{photo.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{photo.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{photo.id}" }

	%td.center
		= link_to '', admin_gallery_photo_path(@gallery_photo,photo, search: @query), remote: true, class: 'show-row'
		%span
			= image_tag photo.photo
	%td.center
