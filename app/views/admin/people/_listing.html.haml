- objects.each do |person|
  %tr{ id: "row-#{person.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if can?(Person).destroy_multiple?
        .checkbox
          %label{ for: "checkbox-#{person.id}" }
            %input{ type:"checkbox", id: "checkbox-#{person.id}", 'checklist-model' => 'check', 'checklist-value' => "#{person.id}", '@click' => "listDelete(#{person.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok
    %td
      = link_to admin_person_path(person, search: @query), remote: true, class: 'show-row' do
        %span
          = image_tag person.avatar.url unless person.avatar.url.blank?
    %td.hidden-xs
      = link_to admin_person_path(person, search: @query), remote: true, class: 'show-row' do
        %span
          = person.name
    %td.hidden-xs.hidden-sm
      = link_to admin_person_path(person, search: @query), remote: true, class: 'show-row' do
        %span
          = person.birthdate
    %td.hidden-xs.hidden-sm
      = link_to admin_person_path(person, search: @query), remote: true, class: 'show-row' do
        %span
          = person.hour
    %td.hidden-xs.hidden-sm
      = link_to admin_person_path(person, search: @query), remote: true, class: 'show-row' do
        %span
          = person.public
    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{person.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{person.id}" }
        - if can?(Person).show?
          %li
            = link_to admin_person_path(person), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if can?(Person).update?
          %li
            = link_to edit_admin_person_path(person), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        - if can?(Person).clone?
          %li
            = link_to admin_person_clone_path(person), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if can?(Person).destroy?
          %li
            = link_to admin_person_path(person), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    %td{:style => 'width: 5%;'}
      %a.drop{:href=>"#"}
        %i.icon-cursor-move
