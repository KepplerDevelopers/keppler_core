%tr{ id: "row-#{category.id}" }
	- if can? :destroy_multiple, Category
		%td.item-check{style:"width: 10%"}
			= link_to "", admin_category_path(category), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{category.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{category.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{category.id}" }

	%td{style:"width: 30%"}
		= link_to "", admin_category_path(category, search: @query), remote: true, class: "show-row"
		%span
			= category.icon
	%td{style:"width: 30%"}
		= link_to "", admin_category_path(category, search: @query), remote: true, class: "show-row"
		%span
			= category.name
	- if can? :clone, Category
		%td{style:"width: 5%"}
			= link_to admin_category_clone_path(category), class: "btn-floating waves-effect btn-flat" do
				= material_icon.md_24.content_copy.css_class("md-dark")
	%td{style:"width: 5%"}
		= link_to admin_category_path(category), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")
