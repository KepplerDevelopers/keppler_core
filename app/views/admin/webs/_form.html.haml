.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_webs_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @web] do |f|
						.row
							.col.s12
								= f.input :name
							.col.s12
								= f.input :description, input_html: {class: "materialize-textarea"}
							.col.s12
								= f.input :date
							.col.s12
								= f.input :pay, as: :checkbox_material
							.col.s12
								.form-actions.right
									= f.button :submit, t("keppler.actions.save"), name: '_save'
									= f.button :submit, t("keppler.actions.save_and_add_another"), name: '_add_other'
