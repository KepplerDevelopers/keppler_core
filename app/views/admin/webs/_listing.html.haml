%tr{ id: "row-#{web.id}" }
	- if can? :destroy_multiple, Web
		%td.center.item-check
			= link_to '', admin_web_path(web), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{web.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{web.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{web.id}" }

	%td.center
		= link_to '', admin_web_path(web, search: @query), remote: true, class: 'show-row'
		%span
			= web.name
	%td.center
		= link_to '', admin_web_path(web, search: @query), remote: true, class: 'show-row'
		%span
			= web.date
	%td.center
		= link_to '', admin_web_path(web, search: @query), remote: true, class: 'show-row'
		%span
			= web.pay
	- if can? :show, Web
		%td.center.btn-w5
			= link_to admin_web_path(web), class: 'btn-floating waves-effect btn-flat', title: 'Show' do
				= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Web
		%td.center.btn-w5
			= link_to edit_admin_web_path(web), class: 'btn-floating btn-flat tooltipped', title: 'Edit' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Web
		%td.center.btn-w5
			= link_to admin_web_clone_path(web), class: 'btn-floating waves-effect btn-flat', title: 'Clone' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Web
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_web_path(web), class: 'btn-floating btn-flat tooltipped', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
