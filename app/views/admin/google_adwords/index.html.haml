= title(t('keppler.titles.index', model: "Google adwords"))
.listing.col.l9.m12.s12
  - if can? :new, model
    = link_to new_admin_google_adword_path, class: "btn-add btn-floating btn-large waves-effect waves-light btn-new hide-on-small-only" do
      -# -# = material_icon.md_24.add
  = entries(@total, @objects)
  %table.bordered
    %tbody
      - @objects.each do |google_adword|
        = render 'listing', google_adword: google_adword
      - if @objects.size.zero?
        %tr
          %td.center{colspan: "4"}
            %center
              = t('keppler.messages.not_found_records', model:  t("keppler.models.pluralize.google_adwords"))
  %center#paginator-module
    = paginate @objects, window: 1

.listing-show.col.l3.m12.hide-on-small-and-down.hide-on-med-and-down
  = render "description"

- if can? :new, model
  = link_to new_admin_google_adword_path, class: "btn-add btn-index-add btn-floating btn-large waves-effect waves-light" do
    %i.material-icons add
