%tr{ id: "row-#{google_adword.id}" }
  - if can? :destroy_multiple, GoogleAdword
    %td.item-check{style:"width: 10%"}
      = link_to "", admin_google_adword_path(google_adword), remote: true, class: "show-row"
      .pretty.p-default.p-thick.p-pulse
        %input{ type:"checkbox", class: "filled-in", id: "checkbox-#{google_adword.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{google_adword.id}", "ng-click"=>"selectByCheck(#{@objects.size})", "@click" => "listDelete(#{google_adword.id})"}
        .state.p-danger-o
          %label{ for: "checkbox-#{google_adword.id}" }
  %td
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.url
  %td.hide-on-small-and-down
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.campaign_name
  %td.hide-on-small-and-down.text-overflow
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.description
  %td.hide-on-small-and-down.text-overflow
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.script
  %td{:style => "float: right;padding-right: 30px;"}
    %a.drop{:id => "menu-#{google_adword.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
      %i.material-icons menu
    %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{google_adword.id}"}
      - if can? :show, GoogleAdword
        %li
          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: t('keppler.actions.show') do
            %i.material-icons remove_red_eye
            = t('keppler.actions.show')
      - if can? :update, GoogleAdword
        %li
          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: t('keppler.actions.edit') do
            %i.material-icons create
            = t('keppler.actions.edit')
      - if can? :clone, GoogleAdword
        %li
          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: t('keppler.actions.clone') do
            %i.material-icons content_copy
            = t('keppler.actions.clone')
      - if can? :delete, GoogleAdword
        %li
          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: t('keppler.actions.delete') do
            %i.material-icons delete
            = t('keppler.actions.delete')
