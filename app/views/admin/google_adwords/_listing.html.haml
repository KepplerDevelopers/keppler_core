%tr{ id: "row-#{google_adword.id}" }
  - if can? :destroy_multiple, User
    %td.item-check{style:"width: 10%"}
      = link_to "", admin_google_adword_path(google_adword), remote: true, class: "show-row"
      .pretty.p-default.p-thick.p-pulse
        %input{ type:"checkbox", class: "filled-in", id: "checkbox-#{google_adword.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{google_adword.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
        .state.p-danger-o
          %label{ for: "checkbox-#{google_adword.id}" }
  %td.hide-on-small-and-down
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.name
  %td.text-overflow{ style: 'max-width: 200px'}
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.google_adword
  %td.hide-on-small-and-down
    = link_to "", admin_google_adword_path(google_adword, search: @query), remote: true, class: "show-row"
    %span= google_adword.url
  %td{:style => "float: right;padding-right: 30px;"}
    %a.coll{"data-toggle"=>"collapse", "aria-expanded"=>"false", "aria-controls"=>"menu-#{google_adword.id}", :href => "#menu-#{google_adword.id}"}
      -# %span.caret
      %i.material-icons menu
    .custom-collapse.collapse{id: "menu-#{google_adword.id}"}
      .panel-body
        - if can? :show, User

          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: 'Show' do
            %i.material-icons remove_red_eye
        - if can? :update, User

          = link_to edit_admin_google_adword_path(google_adword), class: 'new-menu', title: 'Edit' do
            %i.material-icons create
        - if can? :clone, User

          = link_to admin_google_adword_clone_path(google_adword), class: 'new-menu', title: 'Clone' do
            %i.material-icons clone
        - if can? :delete, User

          = link_to admin_google_adword_path(google_adword), class: 'new-menu', title: 'Delete', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
            %i.material-icons delete

:javascript
  $(document).ready(function(){
    $('.collapse').on('show.bs.collapse', function () {
      $('.collapse.in').collapse('hide');
    });
  });
