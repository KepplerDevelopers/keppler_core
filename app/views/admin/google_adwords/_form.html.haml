.wrapper
	.wrapper-body.container
		.actions
			= link_to admin_google_adwords_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
				-# -# = material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				.card-content
					= simple_form_for [:admin, @google_adword] do |f|
						.row
							= f.input :url
							= f.input :campaign_name
							= f.input :description, input_html: {class: "materialize-textarea"}
							= f.input :script, input_html: {class: "materialize-textarea"}

							.form-actions.right
								= f.button :submit, t("keppler.actions.save"), name: "_save"
								= f.button :submit, t("keppler.actions.save_and_add_another"), name: "_add_other"
