.listing-show-header#header-category
	.actions
		- if can? :update, model
			= link_to edit_category_path(@category), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card#body-category{ resize: true , style: "height: {{windowHeight}}px;" }
	.card-content
		%table.list.bordered
			%tr.list-row
				%th.display-label= model.human_attribute_name(:id)
				%td.display-value= @category.id
			%tr.list-row
				%th.display-label= model.human_attribute_name(:name)
				%td.display-value= @category.name
			%tr.list-row
				%th.display-label= model.human_attribute_name(:permalink)
				%td.display-value= @category.permalink
			- unless @category.subcategories.empty?
				%tr.list-row
					%th.display-label= t('activerecord.attributes.keppler_blog/category.subcategories')
					%td.display-value.subcategory
						- @category.subcategories.each do |subcategory|
							%span.subcategory= subcategory.name
		%table.list.bordered
			%tr.list-row
				%th.center= link_to t('keppler.actions.back_history'), categories_path


:javascript
	$('.tooltipped').tooltip({delay: 1});
