%tr{ id: "row-#{category.id}" }
	- if can? :destroy_multiple, model
		%td.item-check{style:"width: 10%"}
			= link_to "", category_path(category), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{category.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{category.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{category.id}" }

	%td.center
		= link_to "", category_path(category, search: @query), remote: true, class: "show-row"
		%span
			= category.name
	%td.center{ width: 5 }
		= link_to posts_path, class: "btn-floating waves-effect btn-flat", title: t("keppler.actions.show") do
			= material_icon.md_24.library_books.css_class("md-dark")
	- if can? :show, KepplerBlog::Category
		%td.center{ width: 5 }
			= link_to category_path(category), class: "btn-floating waves-effect btn-flat", title: t("keppler.actions.show") do
				= material_icon.md_24.remove_red_eye.css_class("md-dark")
	- if can? :update, KepplerBlog::Category
		%td.center{ width: 5 }
			= link_to edit_category_path(category), class: "right btn-floating btn-flat", title: t("keppler.actions.edit") do
				= material_icon.md_18.create.css_class("md-dark")
	- if can? :delete, KepplerBlog::Category
		%td.center{ width: 5 }
			= link_to category_path(category), class: "btn-floating btn-flat right", title: t("keppler.actions.delete"), "data-position" => "bottom", "data-tooltip" => t("keppler.actions.delete"), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
				= material_icon.md_18.delete.css_class("md-dark")
