.timeline-item
	%span.time
		%i.fa.fa-clock-o
		= t('keppler.messages.at')
		= activity.created_at
	%h6.timeline-header.no-border
		%small
			%b
				= activity.owner.name if activity.owner
		%small
			= t('keppler.messages.has')
			= t('keppler.actions.deleted').downcase
			= activity.trackable_type.underscore.humanize
	
